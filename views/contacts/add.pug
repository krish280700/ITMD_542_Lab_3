extends ../layout

block content
    div.container
        h1 Update Contact
        form(action=`${layout == 'edit' ? `/contacts/${contact.id}/edit` : '/contacts'}` method="post")
            label(for="first_name") First Name 
            input.form-control(type="text" name='first_name' value= (layout == 'edit') ? contact.first_name : '' ) 
            label(for="last_name") Last Name 
            input.form-control(type="text" name='last_name' value=(layout == 'edit') ? contact.last_name : '') 
            label(for="email") Email 
            input.form-control(type="text" name='email' value=(layout == 'edit') ? contact.email : '') 
            label(for="notes") Notes 
            textarea.form-control(name="notes", cols="30", rows="10") #{(layout == 'edit') ? contact.notes : ''} 
            if layout == 'edit'
                button.btn.btn-success(type='submit') Update
            else
                button.btn.btn-success(type='submit') Save
            a.btn.btn-secondary.my-2.ms-2(href='/contacts/list') back